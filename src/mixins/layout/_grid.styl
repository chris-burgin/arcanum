// grid
.column {
  display: flex;
  flex-flow: column;
  flex: 1;

  &.two { flex: 2; }
  &.three { flex: 3; }
  &.four { flex: 4; }
  &.five { flex: 5; }
  &.six { flex: 6; }
}

.row {
  display: flex;
  flex-flow: row;
  flex: 1;

  &.two { flex: 2; }
  &.three { flex: 3; }
  &.four { flex: 4; }
  &.five { flex: 5; }
  &.six { flex: 6; }
}
