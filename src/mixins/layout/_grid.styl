// grid
.column {
  display: flex;
  flex-flow: column;
  flex: 1;

  .2 { flex: 2; }
  .3 { flex: 3; }
  .4 { flex: 4; }
  .5 { flex: 5; }
  .6 { flex: 6; }
}

.row {
  display: flex;
  flex-flow: row;
  flex: 1;

  .2 { flex: 2; }
  .3 { flex: 3; }
  .4 { flex: 4; }
  .5 { flex: 5; }
  .6 { flex: 6; }
}
